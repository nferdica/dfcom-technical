{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^auth/(.*)$": "<rootDir>/src/auth/$1",
    "^users/(.*)$": "<rootDir>/src/users/$1",
    "^tickets/(.*)$": "<rootDir>/src/tickets/$1",
    "^events/(.*)$": "<rootDir>/src/events/$1"
  }
}
